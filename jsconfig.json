{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@controllers/*": ["src/controllers/*"],
      "@services/*": ["src/services/*"],
      "@middleware/*": ["src/middleware/*"],
      "@models/*": ["src/models/*"],
      "@routes/*": ["src/routes/*"],
      "@utils/*": ["src/utils/*"],
      "@validations/*": ["src/validations/*"],
      "@config/*": ["src/config/*"],
      "@helpers/*": ["src/helpers/*"],
    }
  },
  "exclude": ["node_modules"]
}
